<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">


        <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="16dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="16dp" />

                <ImageView
                    android:id="@+id/topImageView"
                    android:layout_width="match_parent"
                    android:layout_height="298dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mask"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/ageTextView"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="222dp"
                    android:layout_marginBottom="52dp"
                    android:fontFamily="sans-serif"
                    android:lineHeight="14sp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="@string/age_above_13"
                    android:textColor="@color/colorTextWhite"
                    android:textFontWeight="900"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/topImageView"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/guidelineStart"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/filmNameTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:includeFontPadding="false"
                    android:text="@string/film_name"
                    android:textColor="@color/colorTextWhite"
                    android:textFontWeight="900"
                    android:textSize="40sp"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/guidelineStart"
                    app:layout_constraintTop_toBottomOf="@+id/ageTextView" />

                <TextView
                    android:id="@+id/filmCategoriesTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/categories"
                    android:textColor="@color/colorRedText"
                    android:textFontWeight="300"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/guidelineStart"
                    app:layout_constraintTop_toBottomOf="@+id/filmNameTextView" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/guidelineStart"
                    app:layout_constraintTop_toBottomOf="@+id/filmCategoriesTextView">

                    <ImageView
                        android:id="@+id/star1ImageView"
                        android:layout_width="12dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="3.25dp"
                        android:src="@drawable/redstaricon" />

                    <ImageView
                        android:id="@+id/star2ImageView2"
                        android:layout_width="12dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="3.25dp"
                        android:src="@drawable/redstaricon" />

                    <ImageView
                        android:id="@+id/star3ImageView2"
                        android:layout_width="12dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="3.25dp"
                        android:src="@drawable/redstaricon" />

                    <ImageView
                        android:id="@+id/star4ImageView2"
                        android:layout_width="12dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="3.25dp"
                        android:src="@drawable/redstaricon" />

                    <ImageView
                        android:id="@+id/star5ImageView2"
                        android:layout_width="12dp"
                        android:layout_height="13dp"
                        android:layout_gravity="center"
                        android:src="@drawable/graystaricon" />

                    <TextView
                        android:id="@+id/countReviewsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:paddingStart="9dp"
                        android:text="@string/count_reviews"
                        android:textColor="@color/colorGrayText"
                        android:textFontWeight="900"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/StorylineTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/name"
                    android:textColor="@color/colorStoryline"
                    android:textFontWeight="900"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/guidelineStart"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

                <TextView
                    android:id="@+id/filmStoryTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:alpha="0.75"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="4sp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="After the devastating events of Avengers: Infinity War, the universe is in ruins. With the help of remaining allies, the Avengers assemble once more in order to reverse Thanos' actions and restore balance to the universe."
                    android:textColor="@color/colorTextWhite"
                    android:textFontWeight="300"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/guidelineStart"
                    app:layout_constraintTop_toBottomOf="@+id/StorylineTextView" />

                <TextView
                    android:id="@+id/castTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/cast"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="8sp"
                    android:letterSpacing="-0.01"
                    android:textColor="@color/colorTextWhite"
                    android:textFontWeight="900"
                    android:textSize="14sp"
                    android:layout_marginTop="24dp"
                    android:paddingBottom="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/guidelineStart"
                    app:layout_constraintTop_toBottomOf="@+id/filmStoryTextView"/>

                <ImageView
                    android:id="@+id/firstCastImageView"
                    android:adjustViewBounds="true"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/robert"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toStartOf="@+id/secondCastImageView"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/guidelineStart"
                    app:layout_constraintTop_toBottomOf="@+id/castTextView"/>

                <ImageView
                    android:id="@+id/secondCastImageView"
                    android:adjustViewBounds="true"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chris"
                    android:layout_marginStart="8dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toStartOf="@+id/thirdCastImageView"
                    app:layout_constraintStart_toEndOf="@+id/firstCastImageView"
                    app:layout_constraintTop_toBottomOf="@+id/castTextView"/>

                <ImageView
                    android:id="@+id/thirdCastImageView"
                    android:adjustViewBounds="true"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mark"
                    android:layout_marginStart="8dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toStartOf="@+id/fourthCastImageView"
                    app:layout_constraintStart_toEndOf="@+id/secondCastImageView"
                    app:layout_constraintTop_toBottomOf="@+id/castTextView"/>

                <ImageView
                    android:id="@+id/fourthCastImageView"
                    android:adjustViewBounds="true"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chris2"
                    android:layout_marginStart="8dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
                    app:layout_constraintStart_toEndOf="@+id/thirdCastImageView"
                    app:layout_constraintTop_toBottomOf="@+id/castTextView"/>

                <TextView
                    android:id="@+id/firstCastTextView"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/robert"
                    android:textColor="@color/colorActorName"
                    android:textSize="12sp"
                    android:lineSpacingExtra="2sp"
                    android:textFontWeight="900"
                    android:layout_marginTop="6dp"
                    app:layout_constraintEnd_toStartOf="@+id/secondCastTextView"
                    app:layout_constraintStart_toEndOf="@+id/guidelineStart"
                    app:layout_constraintTop_toBottomOf="@+id/firstCastImageView" />

                <TextView
                    android:id="@+id/secondCastTextView"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/chris"
                    android:textColor="@color/colorActorName"
                    android:textSize="12sp"
                    android:lineSpacingExtra="2sp"
                    android:textFontWeight="900"
                    android:layout_marginTop="6dp"
                    android:paddingStart="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/thirdCastTextView"
                    app:layout_constraintStart_toEndOf="@+id/firstCastTextView"
                    app:layout_constraintTop_toBottomOf="@+id/secondCastImageView" />

                <TextView
                    android:id="@+id/thirdCastTextView"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/mark"
                    android:textColor="@color/colorActorName"
                    android:textSize="12sp"
                    android:lineSpacingExtra="2sp"
                    android:textFontWeight="900"
                    android:layout_marginTop="6dp"
                    android:paddingStart="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/fourthCastTextView"
                    app:layout_constraintStart_toEndOf="@+id/secondCastTextView"
                    app:layout_constraintTop_toBottomOf="@+id/thirdCastImageView" />

                <TextView
                    android:id="@+id/fourthCastTextView"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/chris2"
                    android:textColor="@color/colorActorName"
                    android:textSize="12sp"
                    android:lineSpacingExtra="2sp"
                    android:textFontWeight="900"
                    android:layout_marginTop="6dp"
                    android:paddingStart="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
                    app:layout_constraintStart_toEndOf="@+id/thirdCastTextView"
                    app:layout_constraintTop_toBottomOf="@+id/secondCastImageView" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


